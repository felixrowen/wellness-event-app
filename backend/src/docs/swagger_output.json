  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer"
      }
    },
    "schemas": {
      "LoginRequest": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "example": "hr@example.com"
          },
          "password": {
            "type": "string",
            "example": "Password123!"
          }
        },
        "xml": {
          "name": "LoginRequest"
        }
      },
      "RegisterRequest": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "example": "vendor@example.com"
          },
          "password": {
            "type": "string",
            "example": "Password123!"
          },
          "confirmPassword": {
            "type": "string",
            "example": "Password123!"
          },
          "companyName": {
            "type": "string",
            "example": "ABC Wellness Company"
          },
          "role": {
            "type": "string",
            "example": "VENDOR"
          }
        },
        "xml": {
          "name": "RegisterRequest"
        }
      },
      "CreateEventRequest": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string",
            "example": "Mental Health Workshop"
          },
          "description": {
            "type": "string",
            "example": "A comprehensive workshop on mental health awareness"
          },
          "category": {
            "type": "number",
            "example": 1
          },
          "proposedDates": {
            "type": "array",
            "example": [
              "2025-12-01T10:00:00Z",
              "2025-12-02T10:00:00Z"
            ],
            "items": {
              "type": "string"
            }
          },
          "location": {
            "type": "string",
            "example": "Conference Room A"
          },
          "duration": {
            "type": "string",
            "example": "2 hours"
          },
          "audience": {
            "type": "string",
            "example": "All employees"
          },
          "assignedVendorId": {
            "type": "string",
            "example": "vendor object id"
          }
        },
        "xml": {
          "name": "CreateEventRequest"
        }
      },
      "ApproveEventRequest": {
        "type": "object",
        "properties": {
          "confirmedDate": {
            "type": "string",
            "example": "2025-12-01T10:00:00Z"
          },
          "proposedDates": {
            "type": "array",
            "example": [
              "2025-12-01T10:00:00Z",
              "2025-12-02T10:00:00Z"
            ],
            "items": {
              "type": "string"
            }
          }
        },
        "xml": {
          "name": "ApproveEventRequest"
        }
      },
      "RejectEventRequest": {
        "type": "object",
        "properties": {
          "rejectionReason": {
            "type": "string",
            "example": "The proposed dates do not work for our schedule"
          }
        },
        "xml": {
          "name": "RejectEventRequest"
        }
      }
    }
